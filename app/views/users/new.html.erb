<h1>ADD NEW USER</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :certification, 'Certification' %>
    <%= f.text_field :certification %>
  </div>

  <div>
    <%= f.submit "Add new user" %>
  </div>
<% end %>
