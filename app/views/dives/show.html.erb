<div class="container">
  <div class="jumbotron">
    <center><h1>SCUBA DIVES</h1></center>
    <p>...</p>
  </div>
</div>
<p><center>
  <strong>#</strong>
  <%= @dive.number %> |
  <strong>Date</strong>
  <%= @dive.date.strftime('%d %b %y') %>
  <br>
  <strong>Dive Site</strong>

  <br>
  <strong>Time In</strong>
  <%= @dive.timein.strftime('%H:%M') %> |
  <strong>Time Out</strong>
  <%= @dive.timeout.strftime('%H:%M') %> |
  <strong>Dive Depth</strong>
  <%= @dive.depth %> |
  <strong>Starting Air Pressure</strong>
  <%= @dive.air_start %> |
  <strong>Ending Air Pressure</strong>
  <%= @dive.air_end %> |
  <strong>Nitrox</strong>
  <%= @dive.nitrox %> |
  <strong>Nitrox</strong>
  <%= @dive.temperature %> |
  <strong>Weights</strong>
  <%= @dive.weight %> lbs |
  <strong>Computer Used</strong>
  <%= @dive.computer %>
</p>

<%= link_to "Edit", edit_dive_path(@dive) %> |
<%= link_to "Delete", dive_path, method: :delete, data: {
  confirm: "Are you sure you want to delete this dive?"} %> |
<%= link_to "All Dives", dives_path %>
</center>
